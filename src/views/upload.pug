extends base.pug

block content 
  if errorMessage 
    span=errorMessage

  form(method="post") 
    input(type="text" placeholder="Title" name="title" maxLength=80 required)
    input(type="text" placeholder="Description" name="description" minLength=10)
    input(type="text" placeholder="Hashtags, seperate by comma" name="hashtags")
    input(type="submit", value="Upload Video")