extends base.pug
block content
  div#videoContainer(data-id=video._id)
    video(src="/" + video.fileUrl) 
    div#videoControls.videoControls 
      div.videoControls-play
        span#play.videoControls-playBtn
          i.fa-solid.fa-play
        div.videoControls-time
          span#currentTime 00:00 
          span / 
          span#totalTime 00:00
      input(type="range" min="0" step="1" value="0")#timeline.videoControls-timeline
      div.videoControls-volume
        input(type="range" min="0" step="0.1" value="0.5" max="1")#volume
        span#mute 
          i.fa-solid.fa-volume-high
        span#fullScreen
          i.fa-solid.fa-expand
